@{
    ViewData["Title"] = "Thank You";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: url() no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
            height: 100vh;
            margin: 0;
        }

        .thank-you {
            text-align: center;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .thank-you img {
                max-width: 150%;
                height: auto;
                border-radius: 8px;
            }

            .thank-you h1 {
                margin-top: 20px;
                font-size: 2em;
                color: #007bff;
            }

            .thank-you p {
                margin-top: 10px;
                font-size: 1.2em;
            }

        .button {
            display: inline-block;
            padding: 10px 20px;
            margin: 20px 5px 0 0;
            background-color: #ffff;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="thank-you">
        <img src="/images/ironn.png" alt="">
        <h2>Thank You for your purchase as we hope to hear from you again</h2>
        <div class="button">
            <a asp-controller="Histories" asp-action="Index" asp-route-id="item.productID">View History</a>
        </div>


    </div>

</body>
</html>
