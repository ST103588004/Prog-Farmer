@{
    ViewData["Title"] = "Home";
}

<div class="container my-5">
    <h1 class="text-center text-success display-4">Welcome to Your Farming Hub</h1>
    <p class="text-center lead text-muted">Explore, Buy, and Manage Your Farming Products</p>

    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">High-Quality Crops</h5>
                    <p class="card-text text-muted">Discover fresh, organic products directly from farmers.</p>
                    <a href="/MyWorks" class="btn btn-outline-success w-100">View Products</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Order Tracking</h5>
                    <p class="card-text text-muted">Easily track your orders and purchase history.</p>
                    <a href="/Histories" class="btn btn-outline-success w-100">Order History</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm bg-white">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Join as a Farmer</h5>
                    <p class="card-text text-muted">Sign up to list your products and reach more customers.</p>
                    <a href="/Account/Register" class="btn btn-outline-success w-100">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
